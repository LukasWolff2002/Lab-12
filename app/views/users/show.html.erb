<h1><%= @user.name %>'s Profile</h1>

<p><strong>Email:</strong> <%= @user.email %></p>

<h2>Posts</h2>
<ul>
  <% @posts.each do |post| %>
    <li><%= link_to post.title, post_path(post) %></li>
  <% end %>
</ul>

<h2>Comments</h2>
<ul>
  <% @comments.each do |post| %>
    <li><%= link_to post.body, comment_path(post) %></li>
  <% end %>
</ul>


