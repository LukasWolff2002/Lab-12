
<h1>Showing comment</h1>

<p><strong>Body:</strong></p>
<p><%= @comment.body %></p>

<p><strong>User:</strong></p>
<p><a href="/users/<%= @comment.user.id %>"><%= @comment.user.name %></a></p>

<p><strong>Post:</strong></p>
<p><a href="/posts/<%= @comment.post_id %>"><%= @comment.post.title %></a></p>

<div>
  <%= link_to "Edit this comment", edit_comment_path(@comment), class: "btn btn-warning" %>
  <%= link_to "Back to comments", comments_path, class: "btn btn-primary" %>
  <%= link_to "Destroy this comment", @comment , data: { turbo_confirm: 'Are you sure?', turbo_method: "delete" }, class: "btn btn-danger" %>
</div>
